<!DOCTYPE html>
<html>
<head>
    <meta charset = "utf-8" />
    <title>Complaint Department</title>

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="main-bar">
        <a href="/">Home</a>
        <a href="/Complaint">Complaints</a>
    </div>
    <div id="container">
        @RenderBody()
    </div>
    <footer>
        <p><span id="datetime"></span> -- Complaint Department</p>
        <script>
                var dt = new Date();
                document.getElementById("datetime").innerHTML = (("0"+(dt.getMonth()+1)).slice(-2)) +"/"+
                (("0"+dt.getDate()).slice(-2)) +"/"+ (dt.getFullYear()) +" "+ (("0"+dt.getHours()+1).slice(-2)) +":"+
                (("0"+dt.getMinutes()+1).slice(-2));
        </script>
    </footer>
</body>
</html>